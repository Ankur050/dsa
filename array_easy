-------------------------------------------------------    check_sorted_array -----------------------------------------
#include<bits/stdc++.h>
using namespace std ;
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    // for ascending arrays 
    for(int i=1;i<n;i++){
        if(arr[i]>=arr[i-1]){
            
        }
        else{
            return false;
        }
    }
    return true;
    
} 

