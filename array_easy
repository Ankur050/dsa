
------------------------------------------------                   two sum                      -------------------------------------------------------------

#include<iostream>
using namespace std;
int main(){
    int n,target;
    cout<<"enter the size of array"<<endl;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    cout<<"enter the target of arrray"<<endl;
    cin>>target;
    // two sum code
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i==j)continue;
            if(arr[i]+arr[j]==target){
                cout<<"the sum is founded"<<endl;
            }
        }
    }
}










  --------------------------------------------                       end                                    -----------------------------------------------------
