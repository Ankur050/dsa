------------------------------------------------                   two sum                      -------------------------------------------------------------

#include<iostream>
using namespace std;
int main(){
    int n,target;
    cout<<"enter the size of array"<<endl;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    cout<<"enter the target of arrray"<<endl;
    cin>>target;
    // two sum code
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i==j)continue;
            if(arr[i]+arr[j]==target){
                cout<<"the sum is founded"<<endl;
            }
        }
    }
}










  --------------------------------------------                       end                                    -----------------------------------------------------

   -------------------------------------              Left Rotate an Array by One            ------------------------------------
#include<bits/stdc++.h>
using namespace std ;
int main(){
    int n,m;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    };
    int temp=arr[0];
    for(int i=1;i<n;i++){
        arr[i-1]=arr[i];
    }
    arr[n-1]=temp;
    //cout
    for(int i=0;i<n;i++){
        cout<<arr[i]<<endl;
    }
}



